<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CAProject">
        <activity
            android:name=".PermissionEx"
            android:exported="false"
            android:label="@string/title_activity_permission_ex"
            android:theme="@style/Theme.CAProject" />
        <activity
            android:name=".ThemesEx"
            android:exported="true"
            android:label="@string/title_activity_themes_ex"
            android:theme="@style/Theme.CAProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CA2_Activity"
            android:exported="true"
            android:label="@string/title_activity_ca2"
            android:theme="@style/Theme.CAProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScaffoldEx"
            android:exported="true"
            android:label="@string/title_activity_scaffold_ex"
            android:theme="@style/Theme.CAProject" />
        <activity
            android:name=".AppNavigation"
            android:exported="true"
            android:label="@string/title_activity_app_navigation"
            android:theme="@style/Theme.CAProject" />
        <activity
            android:name=".SendDataScreen"
            android:exported="false"
            android:label="@string/title_activity_send_data_screen"
            android:theme="@style/Theme.CAProject" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CAProject" />
    </application>

</manifest>